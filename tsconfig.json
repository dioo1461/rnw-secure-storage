{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",

    "types": ["react-native"],
    "target": "ES2022",
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "isolatedModules": true,

    "skipLibCheck": true,
    /* Module Resolution */
    // "composite": true,
    "declaration": true
  },
  "include": ["src"],
}
